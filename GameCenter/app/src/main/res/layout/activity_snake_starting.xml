<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/snake_starting"
    android:background="@drawable/snake_starting_background"
    tools:context=".SnakeGame.SnakeStartingActivity">

    <Button
        android:id="@+id/snake_new_game"
        android:layout_width="147dp"
        android:layout_height="38dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/buttonshape"
        android:textColor="#FFFFFF"
        android:text="New Game"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="93dp" />


    <Button
        android:id="@+id/snake_load_saved"
        android:layout_width="147dp"
        android:layout_height="38dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttonshape"
        android:text="Load Saved Game"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="206dp" />

    <Button
        android:id="@+id/snake_score_history"
        android:layout_width="147dp"
        android:layout_height="38dp"
        android:text="Score History"
        android:background="@drawable/buttonshape"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="15dp"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="267dp" />

    <Button
        android:id="@+id/back_to_select_game"
        android:layout_width="147dp"
        android:layout_height="38dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttonshape"
        android:text="Back to Main Page"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="447dp" />



</LinearLayout>