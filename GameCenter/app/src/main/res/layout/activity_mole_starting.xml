<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mole_starting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mole_starting_background"
    android:orientation="vertical"
    tools:context=".SnakeGame.SnakeStartingActivity">

    <Button
        android:id="@+id/mole_new"
        android:layout_width="147dp"
        android:layout_height="38dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/buttonshape"
        android:elevation="0dp"
        android:text="New Game"
        android:textColor="#ffff"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="93dp" />

    <Button
        android:id="@+id/mole_load"
        android:layout_width="147dp"
        android:layout_height="38dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttonshape"
        android:text="Load Game"
        android:textColor="#ffff"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="206dp" />

    <Button
        android:id="@+id/mole_score_history"
        android:layout_width="147dp"
        android:layout_height="38dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttonshape"
        android:text="Score History"
        android:textColor="#ffff"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="267dp" />

    <Button
        android:id="@+id/mole_back_to_select_game"
        android:layout_width="147dp"
        android:layout_height="38dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttonshape"
        android:text="Back To Main Page"
        android:textColor="#ffff"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="267dp" />


</LinearLayout>